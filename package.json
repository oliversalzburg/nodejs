{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "yarn3-typescript-nodejs-esbuild",
  "license": "MIT",
  "author": "Oliver Salzburg <oliver.salzburg@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "clean": "rm -rf ./output",
    "lint": "yarn run lint:all",
    "lint:all": "yarn run lint:eslint && yarn run lint:prettier && yarn run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "test": "tsc && node $(yarn bin mocha) output/*.test.js",
    "test:coverage": "tsc && c8 --reporter=html-spa node $(yarn bin mocha) output/*.test.js"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@oliversalzburg/eslint-config": "1.2.0",
    "@oliversalzburg/js-utils": "0.2.2",
    "@types/chai": "5.0.1",
    "@types/eslint": "9.6.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.10.2",
    "c8": "10.1.3",
    "chai": "5.1.2",
    "esbuild": "0.24.2",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jsdoc": "50.6.1",
    "eslint-plugin-tsdoc": "0.4.0",
    "globals": "15.14.0",
    "lint-staged": "15.3.0",
    "mocha": "11.0.1",
    "prettier": "3.4.2",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-sh": "0.14.0",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.2"
  },
  "packageManager": "yarn@4.6.0"
}
